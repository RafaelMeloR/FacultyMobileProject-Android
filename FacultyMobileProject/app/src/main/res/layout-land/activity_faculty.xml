<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/faculty_id_text_view_FacultyActivity"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/faculty_id_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.706"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <EditText
        android:id="@+id/faculty_lname_text_view_FacultyActivity"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/faculty_lname_text_view"
        app:layout_constraintEnd_toEndOf="@+id/faculty_id_text_view_FacultyActivity"
        app:layout_constraintStart_toStartOf="@+id/faculty_id_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/faculty_id_text_view_FacultyActivity" />

    <EditText
        android:id="@+id/faculty_fname_text_view_FacultyActivity"
        android:layout_width="221dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/faculty_fname_text_view"
        app:layout_constraintEnd_toEndOf="@+id/faculty_lname_text_view_FacultyActivity"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_lname_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/faculty_lname_text_view_FacultyActivity" />

    <EditText
        android:id="@+id/faculty_salary_text_view_FacultyActivity"
        android:layout_width="221dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/faculty_salary_text_view"
        app:layout_constraintEnd_toEndOf="@+id/faculty_fname_text_view_FacultyActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_fname_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/faculty_fname_text_view_FacultyActivity" />

    <EditText
        android:id="@+id/faculty_bonus_text_view_FacultyActivity"
        android:layout_width="221dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/faculty_bonus_text_view"
        app:layout_constraintEnd_toEndOf="@+id/faculty_salary_text_view_FacultyActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_salary_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/faculty_salary_text_view_FacultyActivity" />

    <TextView
        android:id="@+id/bonus_text_view_FacultyActivity"
        android:layout_width="221dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:text="@string/faculty_bonus_text_view"
        app:layout_constraintEnd_toEndOf="@+id/faculty_bonus_text_view_FacultyActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/faculty_bonus_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/faculty_bonus_text_view_FacultyActivity" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/bonus_text_view_FacultyActivity"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="@+id/bonus_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/bonus_text_view_FacultyActivity">

        <Button
            android:id="@+id/update_display_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_display_button" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="67dp"
        android:layout_height="23dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="12dp"
        android:text="@string/faculty_id"
        app:layout_constraintEnd_toStartOf="@+id/faculty_id_text_view_FacultyActivity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:text="@string/faculty_fname"
        app:layout_constraintEnd_toStartOf="@+id/faculty_lname_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="@string/faculty_lname"
        app:layout_constraintEnd_toStartOf="@+id/faculty_fname_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="@string/faculty_salary"
        app:layout_constraintEnd_toStartOf="@+id/faculty_salary_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="12dp"
        android:text="@string/faculty_rate_bonus"
        app:layout_constraintEnd_toStartOf="@+id/faculty_bonus_text_view_FacultyActivity"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>